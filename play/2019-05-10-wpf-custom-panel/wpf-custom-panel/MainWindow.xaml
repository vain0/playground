<Window x:Class="wpf_custom_panel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_custom_panel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <local:CenteringPanel>
        <TextBlock local:CenteringPanel.Dock="Left">
            L1
        </TextBlock>
        <TextBlock local:CenteringPanel.Dock="Left">
            L2
        </TextBlock>

        <Canvas Background="DarkRed" />

        <TextBlock local:CenteringPanel.Dock="Right">
            Right 1
        </TextBlock>
        <StackPanel local:CenteringPanel.Dock="Right">
            <TextBlock>
                Right 2
            </TextBlock>
            <TextBlock>
                Right 3
            </TextBlock>
        </StackPanel>
    </local:CenteringPanel>
</Window>

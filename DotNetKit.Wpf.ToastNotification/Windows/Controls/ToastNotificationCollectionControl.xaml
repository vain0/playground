<UserControl
    x:Class="DotNetKit.Windows.Controls.ToastNotificationCollectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:controls="clr-namespace:DotNetKit.Windows.Controls"
    mc:Ignorable="d" 
    d:DesignWidth="300"
    d:DesignHeight="300"
    >
    <ItemsControl ItemsSource="{Binding}" Margin="0,0,50,50">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <controls:ToastNotificationControl Margin="0,30,0,0" />
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>

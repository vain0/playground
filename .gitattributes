#=================================================
# Text files
#=================================================
# Normalize line endings to LF for all text files.
*               text=auto

*.txt           text

*.gitignore     text eol=lf
*.gitattributes text eol=lf

*.c             text diff=cpp
*.h             text diff=cpp
*.cc            text diff=cpp
*.hpp           text diff=cpp
*.cpp           text diff=cpp
*.hxx           text diff=cpp
*.cxx           text diff=cpp

*.cs            text diff=csharp

*.html          text diff=html
*.htm           text diff=html

*.java          text diff=java

*.pl            text diff=perl
*.php           text diff=php
*.python        text diff=python
*.ruby          text diff=ruby

*.sh            text eol=lf
*.bat           text eol=crlf

*.tex           text diff=tex

#================================================
# Visual Studio
#================================================
*.sln           text merge=union
*.csproj        text merge=union
*.vbproj        text merge=union
*.vcproj        text merge=union
*.vcxproj       text merge=union
*.xproj         text merge=union

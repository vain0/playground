<ListBox
    x:Class="Tuktuk.Wpf.Controls.TabControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:controls="clr-namespace:Tuktuk.Wpf.Controls;assembly=Tuktuk.Wpf.Model"
    xmlns:viewControls="clr-namespace:Tuktuk.Wpf.Controls"
    mc:Ignorable="d" 
    d:DesignWidth="300"
    d:DesignHeight="300"
    IsTabStop="False"
    >
    <!-- Item type: TabPage -->
    <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
            <WrapPanel />
        </ItemsPanelTemplate>
    </ListBox.ItemsPanel>
    
    <ListBox.ItemTemplate>
        <DataTemplate>
            <TextBlock
                Margin="5,0,5,0"
                MinWidth="80"
                Text="{Binding (controls:TabPage.TabHeader)}"
                />
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>

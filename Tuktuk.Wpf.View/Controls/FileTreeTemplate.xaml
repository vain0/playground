<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Tuktuk.Wpf.Controls;assembly=Tuktuk.Wpf.Model"
    >
    <HierarchicalDataTemplate
        DataType="{x:Type controls:FileTreeNode}"
        >
        <TextBlock Text="{Binding Name}" />
    </HierarchicalDataTemplate>
    
    <DataTemplate DataType="{x:Type controls:FileTree}">
        <TreeView IsTabStop="False" ItemsSource="{Binding Roots}">
        </TreeView>
    </DataTemplate>
</ResourceDictionary>

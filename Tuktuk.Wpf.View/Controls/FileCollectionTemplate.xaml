<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Tuktuk.Wpf.Controls;assembly=Tuktuk.Wpf.Model"
    >
    <DataTemplate DataType="{x:Type controls:FileCollection}">
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Header="Name"
                        />
                    <GridViewColumn
                        Header="Last Updated"
                        />
                    <GridViewColumn
                        Header="Size"
                        />
                </GridView>
            </ListView.View>
        </ListView>
    </DataTemplate>
</ResourceDictionary>

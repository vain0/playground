; Top-most EditorConfig file
root = true



; Global settings
[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{txt,md}]
indent_style = space
indent_size = 4
charset = utf-8

[*.{yaml,yml}]
indent_style = space
indent_size = 2
charset = utf-8



; Web
[*.{html,htm,css,javascript}]
indent_style = space
indent_size = 2
charset = utf-8



; .NET
[*.{sln,xaml}]
indent_style = space
indent_size = 4
charset = utf-8

[{App.config,packages.config,project.json}]
indent_style = space
indent_size = 2
charset = utf-8

; C#
[*.{cs,csx}]
indent_style = space
indent_size = 4
charset = utf-8

[*.csproj]
indent_style = space
indent_size = 2
charset = utf-8

; F#
[*.{fs,fsi,fsl,fsy,fsproj}]
indent_style = space
indent_size = 2
charset = utf-8

; PowerShell
[*.ps1]
indent_style = space
indent_size = 4
charset = utf-8-bom

; ASP.NET
[*.cshtml]
indent_style = space
indent_size = 2
charset = utf-8-bom

; NuGet
[*.nuspec]
indent_style = space
indent_size = 2
charset = utf-8

; Paket
[*paket.*]
indent_style = space
indent_size = 2
charset = utf-8



; VSCode
[{launch.json,tasks.json}]
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = false

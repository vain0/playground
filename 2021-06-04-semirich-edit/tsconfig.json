{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "target",
    "strict": true,
    "sourceMap": true,
    "preserveWatchOutput": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
